{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "typeRoots": [
      "./node_modules/@types",
      "./scss.d.ts"
    ],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "./node_modules/*"
  ],
  "include": [
    "src/**/*"
  ]
}
